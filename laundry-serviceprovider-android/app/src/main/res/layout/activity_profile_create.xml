<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_alignParentBottom="true">-->
<!--        <include layout="@layout/default_bottom_line_view"-->
<!--            />-->
<!--    </LinearLayout>-->
</LinearLayout>